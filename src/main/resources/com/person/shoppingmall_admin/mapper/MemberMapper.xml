<?xml version="1.0" encoding="UTF-8"?> <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.person.shoppingmall_admin.mapper.MemberMapper">
    <select id="selectMemberList" resultType="com.person.shoppingmall_admin.data.MemberVO">
        select
            mi_seq,mi_email,mi_name,mi_birth,mi_gen,mi_address,mi_phone,mi_grade,mi_status,mi_reg_dt,mi_leave_dt
        from member_info
        where mi_email like #{keyword}
        order by mi_seq
        limit 10 offset #{offset}
    </select>
    <select id="selectMemberCnt" resultType="java.lang.Integer">
        select count(*) from member_info where mi_email like #{keyword}
    </select>
    <select id="isExistMeMberEmail" resultType="java.lang.Integer">
        select count(*) from member_info where mi_email = #{email}
    </select>
    <select id="selectMemberBySeq" resultType="com.person.shoppingmall_admin.data.MemberVO">
        select 
            mi_seq,mi_email,mi_name,mi_birth,mi_gen,mi_address,mi_phone,mi_grade,mi_status,mi_reg_dt,mi_leave_dt
        from member_info 
        where mi_seq = #{seq}
    </select>



    <insert id="insertMemeber">
        insert into member_info(mi_email,mi_pwd,mi_name,mi_birth,mi_gen,mi_address,mi_phone,mi_grade,mi_status)
        values(#{mi_email},#{mi_pwd},#{mi_name},#{mi_birth},#{mi_gen},#{mi_address},#{mi_phone},#{mi_grade},#{mi_status})
    </insert>
    <update id="updateMemeber">
        update member_info set 
        mi_name=#{mi_name},mi_birth=#{mi_birth},mi_gen=#{mi_gen},mi_address=#{mi_address},mi_phone=#{mi_phone},mi_grade=#{mi_grade},mi_status=#{mi_status}    
        where mi_email = #{mi_email}
        </update>
    <delete id="deleteMemeber">
        delete from member_info where mi_seq = #{seq}
    </delete>
</mapper>